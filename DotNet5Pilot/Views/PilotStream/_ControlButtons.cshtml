<div class="fixed-bottom card">
    <div class="container controls card-body">
        <div class="row">
            <div class="col-12">
                <button id="prevButton" class="btn btn-outline-primary"><i class="fa fa-step-backward"></i></button>
                <button id="backwardButton" class="btn btn-outline-primary"><i class="fa fa-backward"></i></button>
                <button id="playButton" class="btn btn-outline-primary"><i class="fa fa-play"></i></button>
                <button id="pauseButton" class="btn btn-outline-primary"><i class="fa fa-pause"></i></button>
                <button id="forwardButton" class="btn btn-outline-primary"><i class="fa fa-forward"></i></button>
                <button id="nextButton" class="btn btn-outline-primary"><i class="fa fa-step-forward"></i></button>
                <button id="stopButton" class="btn btn-outline-primary"><i class="fa fa-stop"></i></button>
                <button id="repeatButton" class="btn btn-outline-primary"><i class="fa fa-sync"></i></button>
                <button id="randomButton" class="btn btn-outline-primary"><i class="fa fa-random"></i></button>
            </div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-12">
                <div id="progress" class="progress">
                    <div id="progressBar" class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
                </div>
            </div>
        </div>
        <div class="row justify-content-end">
            <div id="timeProgress" class="col-12 text-right">
                00:00
            </div>
        </div>
    </div>
</div>